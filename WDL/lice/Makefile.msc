jpeglib : "$(OUTDIR)" $(JPEGLIB)

{../jpeglib}.c{$(OUTDIR)}.obj :
	$(CPP) $(CPPFLAGS) "$<"

GIFLIB = \
"$(OUTDIR)/dgif_lib.obj" \
"$(OUTDIR)/egif_lib.obj" \
"$(OUTDIR)/gif_hash.obj" \
"$(OUTDIR)/gifalloc.obj"

giflib : "$(OUTDIR)" $(GIFLIB)

{../giflib}.c{$(OUTDIR)}.obj :
	$(CPP) $(CPPFLAGS) /I "../giflib" /D "HAVE_CONFIG_H" "$<"

TINYXML = \
"$(OUTDIR)/svgtiny_colors.obj" \
"$(OUTDIR)/tinystr.obj" \
"$(OUTDIR)/tinyxml.obj" \
"$(OUTDIR)/tinyxmlerror.obj" \
"$(OUTDIR)/tinyxmlparser.obj"

tinyxml : "$(OUTDIR)" $(TINYXML)

"$(OUTDIR)/svgtiny_colors.obj" : ../tinyxml/svgtiny_colors.c
	$(CPP) $(CPPFLAGS) "$?"

{../tinyxml}.cpp{$(OUTDIR)}.obj :
	$(CPP) $(CPPFLAGS) "$<"

LICE = \
"$(OUTDIR)/lice.obj" \
"$(OUTDIR)/lice_arc.obj" \
#"$(OUTDIR)/lice_bmp.obj" \
#"$(OUTDIR)/lice_colorspace.obj" \
#"$(OUTDIR)/lice_gif.obj" \
#"$(OUTDIR)/lice_gl_ctx.obj" \
#"$(OUTDIR)/lice_glbitmap.obj" \
#"$(OUTDIR)/lice_ico.obj" \
#"$(OUTDIR)/lice_jpg.obj" \
#"$(OUTDIR)/lice_jpg_write.obj" \
"$(OUTDIR)/lice_line.obj" \
#"$(OUTDIR)/lice_palette.obj" \
#"$(OUTDIR)/lice_pcx.obj" \
"$(OUTDIR)/lice_png.obj" \
#"$(OUTDIR)/lice_png_write.obj" \
#"$(OUTDIR)/lice_svg.obj" \
#"$(OUTDIR)/lice_texgen.obj" \
#"$(OUTDIR)/lice_text.obj" \
"$(OUTDIR)/lice_textnew.obj"

lice : "$(OUTDIR)" $(LICE)

.cpp{$(OUTDIR)}.obj :
	$(CPP) $(CPPFLAGS) /wd4244 $<

LIB = \
$(ZLIB) \
$(LIBPNG) \
#$(JPEGLIB) \
#$(GIFLIB) \
#$(TINYXML) \
$(LICE)

"$(OUTDIR)/$(OUTFILE)" : "$(OUTDIR)" $(LIB)
	lib /out:"$(OUTDIR)/$(OUTFILE)" /nologo $(LIB)

lib : "$(OUTDIR)/$(OUTFILE)"
	del "$(OUTDIR:/=\)\*.obj"
!IF "$(CONFIGURATION)" == "Debug"
	del "$(OUTDIR:/=\)\vc*.*"
!ENDIF

clean :
!IF EXIST("$(OUTDIR)/")
	rmdir /s /q "$(OUTDIR:/=\)"
!ENDIF
