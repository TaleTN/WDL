PROJECT = LICE
OUTFILE = lice.lib

CPPFLAGS = $(CPPFLAGS) /EHsc /GS- /GR- /D "_LIB" /D "_MBCS" /Oi /Ot /fp:fast /GF /MT /c /Fo"$(OUTDIR)/" /Fd"$(OUTDIR)/" /W3 /WX /wd4996 /nologo

!IF !DEFINED(CONFIGURATION) && DEFINED(NODEBUG)
CONFIGURATION = Release
!ELSE IF !DEFINED(CONFIGURATION)
CONFIGURATION = Debug
!ENDIF

!IF "$(CONFIGURATION)" == "Release"

CPPFLAGS = $(CPPFLAGS) /D "NDEBUG" /O2 /Ob2

!ELSE IF "$(CONFIGURATION)" == "Debug"

CPPFLAGS = $(CPPFLAGS) /D "_DEBUG" /RTCsu
!	IF "$(PLATFORM)" == "X64"
CPPFLAGS = $(CPPFLAGS) /Zi
!	ELSE
CPPFLAGS = $(CPPFLAGS) /ZI
!	ENDIF

!ENDIF

!IF "$(TARGET_CPU)" == "x86" || "$(CPU)" == "i386"

!	IFNDEF NOSSE2
PLATFORM = Win32
CPPFLAGS = $(CPPFLAGS) /arch:SSE2
!	ELSE
PLATFORM = Win32_noSSE2
!	ENDIF
CPPFLAGS = $(CPPFLAGS) /D "WIN32" /D "_CRT_SECURE_NO_WARNINGS"

!ELSE IF "$(TARGET_CPU)" == "x64" || "$(CPU)" == "AMD64"

PLATFORM = X64
CPPFLAGS = $(CPPFLAGS) /favor:blend /wd4267

!ENDIF

OUTDIR = $(PLATFORM)/$(CONFIGURATION)

!MESSAGE $(PROJECT) - $(CONFIGURATION)|$(PLATFORM)
!MESSAGE

all : "$(OUTDIR)/$(OUTFILE)"

"$(OUTDIR)" :
!IF !EXIST("$(OUTDIR)/")
	mkdir $@
!ENDIF

ZLIB = \
"$(OUTDIR)/adler32.obj" \
#"$(OUTDIR)/compress.obj" \
"$(OUTDIR)/crc32.obj" \
#"$(OUTDIR)/deflate.obj" \
#"$(OUTDIR)/gzlib.obj" \
#"$(OUTDIR)/gzread.obj" \
#"$(OUTDIR)/gzwrite.obj" \
#"$(OUTDIR)/gzclose.obj" \
"$(OUTDIR)/infback.obj" \
"$(OUTDIR)/inffast.obj" \
"$(OUTDIR)/inflate.obj" \
"$(OUTDIR)/inftrees.obj" \
"$(OUTDIR)/trees.obj" \
"$(OUTDIR)/uncompr.obj" \
"$(OUTDIR)/zutil.obj"

zlib : "$(OUTDIR)" $(ZLIB)

{../zlib}.c{$(OUTDIR)}.obj :
	$(CPP) $(CPPFLAGS) /D NO_GZCOMPRESS /D Z_SOLO "$<"

LIBPNG = \
"$(OUTDIR)/png.obj" \
"$(OUTDIR)/pngerror.obj" \
"$(OUTDIR)/pngget.obj" \
"$(OUTDIR)/pngmem.obj" \
