"$(OUTDIR)/pngset.obj" \
"$(OUTDIR)/pngtrans.obj" \
#"$(OUTDIR)/pngwio.obj" \
#"$(OUTDIR)/pngwrite.obj" \
#"$(OUTDIR)/pngwtran.obj" \
#"$(OUTDIR)/pngwutil.obj"

libpng : "$(OUTDIR)" $(LIBPNG)

{../libpng}.c{$(OUTDIR)}.obj :
	$(CPP) $(CPPFLAGS) /I "../zlib" "$<"

JPEGLIB = \
