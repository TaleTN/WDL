"$(OUTDIR)/jdatadst.obj" \
"$(OUTDIR)/jdatasrc.obj" \
"$(OUTDIR)/jdcoefct.obj" \
"$(OUTDIR)/jdcolor.obj" \
"$(OUTDIR)/jddctmgr.obj" \
"$(OUTDIR)/jdhuff.obj" \
"$(OUTDIR)/jdinput.obj" \
"$(OUTDIR)/jdmainct.obj" \
"$(OUTDIR)/jdmarker.obj" \
"$(OUTDIR)/jdmaster.obj" \
"$(OUTDIR)/jdmerge.obj" \
